{% extends 'base-dashboard.html.twig' %}

{% block body %}

        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div class="scroll-sidebar">
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav">
                    {{ block('reusable_sidebar') }}
                    <div class="text-center m-t-30">
                        {#<a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-info hidden-md-down"> Upgrade to Pro</a>#}
                    </div>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-5 align-self-center">
                        <h3 class="text-themecolor">Control your Email Lists.</h3>
                    </div>
                    <div class="col-md-7 align-self-center">
                        {#<a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>#}
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->

                <div class="row">
                    <!-- column -->
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Add a new List</h4>
                                {{ form_start(form) }}
                                {#{{ form_widget(form) }}#}
                                {{ form_row(form.list_name) }}
                                <div class="custom-file-input-css">
                                    <label class="custom-file">
                                    {{ form_row(form.file) }}
                                    <span class="custom-file-control">Choose a CSV file ...</span>
                                    </label>
                                </div>
                                {{ form_row(form.save) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                        <div class="card">

                            <div class="card-body">

                                <h4 class="card-title">Mailing Lists : </h4>
                                <div class="table-responsive">
                                    {% if lists is empty %}
                                        <h2 class="text-themecolor" >You Dont have any Mailing Lists yet.</h2>
                                        <h6 class="card-subtitle"><code>Tip:</code> No Worries, you can upload your list of emails in a <code><i>.csv format</i></code> at any time ;)</h6>
                                    {% else %}
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>List Name</th>
                                            <th>Date added</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                                {% for onelist in lists %}
                                                <tr>
                                                    <td>{{ loop.index }}</td>
                                                    <td>{{ onelist.getListName() }}</td>
                                                    <td>{{ onelist.getDataAdded().date|date("Y/m/d H:m") }}</td>
                                                    <td><button type="button" data-toggle="tooltip" data-placement="top" title="Delete list" class="delete btn btn-outline-danger" data-optionid="{{ onelist.id }}" ><i class="mdi mdi-delete"></i></button>  <button type="button" data-toggle="tooltip" data-placement="top" title="Send email to list" class="send btn btn-outline-success"  data-optionid="{{ onelist.id }}"><i class="mdi mdi-send"></i></button></td>
                                                </tr>
                                                {% endfor %}
                                        </tbody>
                                    </table>

                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            {{ block('reusable_footer') }}
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
    </div>

{% endblock %}